<!DOCTYPE html>
<html lang="en" dir="ltr">
	<head>
		<meta charset="utf-8">
	</head>
	<body>
		<header class="header">
			{{ page.header }}
			<br>
			<div class="heading">
				<h1>Welcome</h1>
			</div>
			<nav class="menu">
				{{ page.menu }}
				<br>
				<div class='nav'>
					<li>
						<h3>Home</h3>
						<h3>About</h3>
						<h3>Contact</h3>
					</li>
				</div>
			</nav>
		</header>
		<main class="main">
			<div class="content">
				{{ page.content }}
			</div>
			{% if page.sidebar %}
				<div class="sidebar"></div>
			{% endif %}
		</main>

		<footer class="footer">
			{{ page.footer }}
		</footer>
	</body>
</html>
